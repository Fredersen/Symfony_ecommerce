{% extends 'base.html.twig' %}

    {% block title %}Mot de passe oublié !{% endblock %}

    {% block content %}
        <div class="block-small">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-info">{{ message }}</div>
            {% endfor %}
            <form method="post">
                <h1 class="h3 mb-3 font-weight-normal">Réinitialiser votre mot de passe</h1>
                <label for="inputEmail">Votre email</label>
                <input type="email" value="" name="email" id="inputEmail" class="form-control" placeholder="Votre adresse email" autocomplete="email" required autofocus>
                <button class="btn btn-lg btn-info btn-block mt-3" type="submit">
                    Valider
                </button>
                <hr>
                <p class="text-center">ou <a href="{{ path('app_login') }}">Connectez vous</a></p>
            </form>
        </div>
    {% endblock %}
